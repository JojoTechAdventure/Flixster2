<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewTvShowPoster"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:contentDescription="@string/tv_show_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewTvShowTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TV Show Title"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewTvShowPoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewTvShowReleaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Release Date"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTvShowTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewTvShowRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTvShowReleaseDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewTvShowOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTvShowRating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

